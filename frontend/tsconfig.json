{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "declaration": true,
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "lib": [ "es2015", "dom" ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "paths": {
      "redux": [
          "./node_modules/redux/dist/redux"
      ],
      "redux-thunk": [
          "./node_modules/redux-thunk/dist/redux-thunk"
      ],
      "redux-devtools-extension": [
          "./node_modules/redux-devtools-extension/index.js"
      ],
      "@redux-d-ts": [
          "./node_modules/redux/index.d.ts"
      ],
      "axios": [
          "./node_modules/axios/dist/axios"
      ],
    }
  },

  "exclude": [
    "node_modules"
  ]
}